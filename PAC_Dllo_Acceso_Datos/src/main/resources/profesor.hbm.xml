<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pac.Profesor" table="profesores" catalog="M06">
        <meta attribute="class-description">Profesor</meta>
        <!-- nombre de la columna idProfesor, Todos los ID se deberán establecer de forma autonumérica. -->
        <id name="id" column="idProfesor" type="long">
            <generator class="increment"/>
        </id>
        <property name="nombre" column = "nombre"/>
        <property name="sexo" column = "sexo"/>
    </class>
</hibernate-mapping>