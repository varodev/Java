<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="pac.Modulo" table="modulos" catalog="M06">
        <meta attribute="class-description">Módulo</meta>
        <!-- nombre de la columna idModulo, Todos los ID se deberán establecer de forma autonumérica. -->
        <id name="id" column="idModulo" type="long">
            <generator class="increment"/>
        </id>
        <property name="nombre"/>
        <property name="codigo"/>
    </class>
</hibernate-mapping>